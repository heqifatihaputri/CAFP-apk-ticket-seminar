<%= render 'layouts/shared/breadcrumb' %>
<section class="section">
  <div class="row">
    <div class="col-lg-12">
      <%= render partial: 'admin/events/partials/search' %>
      <div class="card">
        <div class="card-body">
          <div class="d-flex">
            <div class="col-md-6">
              <h5 class="card-title">Event Data</h5>
            </div>
            <div class="col-md-6 mt-2" align="right">
              <%= link_to new_admin_event_path, class: 'btn btn-success mb-4' do %>
                <i class='zmdi zmdi-plus-circle'></i>
                New Event
              <% end %>
            </div>
          </div>
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">No</th>
                <th scope="col" width="30%">Name</th>
                <th scope="col">Venue / Platform</th>
                <th scope="col">Time Period</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @events.each_with_index do |event, idx| %>
                <tr>
                  <th scope="row"><%= idx+1 %></th>
                  <td><%= event.name %></td>
                  <td><%= event.venue.name %></td>
                  <td><%= event.date_period %></td>
                  <td>
                    <div class="dropdown">
                      <button class="nav-item dropdown pe-3 btn btn-secondary">
                        <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                          <span class="d-none d-md-block dropdown-toggle ps-2">Action</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                          <li>
                            <%= link_to admin_event_path(event), class: "dropdown-item d-flex align-items-center" do %>
                              <i class="zmdi zmdi-eye"></i><span>Details</span>
                            <% end %>
                            <%= link_to edit_admin_event_path(event), class: "dropdown-item d-flex align-items-center" do %>
                              <i class="zmdi zmdi-edit"></i>Edit
                            <% end %>
                            <%= link_to admin_event_path(event),
                                data: { method: :delete, confirm: 'Are you sure?' },
                                class: "dropdown-item d-flex align-items-center" do %>
                              <i class="zmdi zmdi-delete"></i><span>Delete</span>
                            <% end %>
                          </li>
                        </ul>
                      </button>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @events,  window: 2 %>
          <%= page_entries_info @events, entry_name: 'events' if @events.present? %>
        </div>
      </div>
    </div>
  </div>
</section>
