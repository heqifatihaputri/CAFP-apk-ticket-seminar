<%= render 'layouts/shared/breadcrumb' %>
<section class="section">
  <div class="row">
    <div class="col-lg-12">
      <%= render partial: 'admin/venues/partials/search' %>
      <div class="card">
        <div class="card-body">
          <div class="d-flex">
            <div class="col-md-6">
              <h5 class="card-title">Venue Data</h5>
            </div>
            <div class="col-md-6 mt-2" align="right">
              <%= link_to new_admin_venue_path, class: 'btn btn-success mb-4' do %>
                <i class='zmdi zmdi-plus-circle'></i>
                New Venue
              <% end %>
            </div>
          </div>
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">City</th>
                <th scope="col">Country</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @venues.each_with_index do |venue, idx| %>
                <tr>
                  <th scope="row"><%= idx+1 %></th>
                  <td><%= venue.name %></td>
                  <td><%= venue.city %></td>
                  <td><%= venue.country&.country_name %></td>
                  <td>
                    <div class="dropdown">
                      <button class="nav-item dropdown pe-3 btn btn-secondary">
                        <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                          <span class="d-none d-md-block dropdown-toggle ps-2">Action</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                          <li>
                            <%= link_to admin_venue_path(venue), class: "dropdown-item d-flex align-items-center" do %>
                              <i class="zmdi zmdi-eye"></i><span>Details</span>
                            <% end %>
                            <%= link_to edit_admin_venue_path(venue), class: "dropdown-item d-flex align-items-center" do %>
                              <i class="zmdi zmdi-edit"></i>Edit
                            <% end %>
                            <%= link_to admin_venue_path(venue),
                                data: { method: :delete, confirm: 'Are you sure?' },
                                class: "dropdown-item d-flex align-items-center" do %>
                              <i class="zmdi zmdi-delete"></i><span>Delete</span>
                            <% end %>
                          </li>
                        </ul>
                      </button>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @venues,  window: 2 %>
          <%= page_entries_info @venues, entry_name: 'venues' if @venues.present? %>
        </div>
      </div>
    </div>
  </div>
</section>
